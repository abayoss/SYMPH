{% block title %}Articles{% endblock %}

{% block body %}
    {% if articles %}
    <div class="card py-5 bg-light border-warning">
        <div class="container ">
          <div class="row">
    {% for article in articles %}
            <div class="col-md-4">
              <div class="card mb-4 shadow-sm">
                <h4 class="card-header">{{ article.title }}</h4>
