                <div class="card-body">
                  <p class="card-text">{{ article.body }}</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      {# <a href="article/{{ article.id }}" type="buton" class="btn btn-sm btn-outline-success">Afficher</a> #}
                      <a href="{{ path('edit_blog', {'id' : article.id} ) }}" type="a" class="btn btn-sm btn-outline-success">Modifier</a>
                      <a href="#"type="a-danger" class="btn btn-sm btn-outline-danger" data-id="{{ article.id }}">Supprimer</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
    {% endfor %}
          </div>
        </div>
      </div>
    <table id="articles" class="table table-striped">
        <thead>
        <tr>
            <th>Tous Les Articles </th>
            <th class="text-right" ></th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
            <td ><a href="article/{{ article.id }}">{{ article.title }}</a></td>
            <td class="text-right"> 
            <a href="article/{{ article.id }}" class="btn btn-dark">Afficher</a>
            <a href="article/edit/{{ article.id }}" class="btn btn-success">Modifier</a>
            <a href="#" class="btn btn-danger delete-article" data-id="{{ article.id }}">Supprimer</a>
            </td>
            </tr>
        {% endfor %}
        </tbody>
        {% else %}
        <p>no articles</p>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}